<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" >
    

    <!-- library notifyGru -->
    <bean id="identitystore-fccertifier.lib-notifygru.apiManagerTransport" class="fr.paris.lutece.plugins.librarynotifygru.rs.service.NotificationTransportApiManagerRest">
        <property name="notificationEndPoint">
            <value>http://127.0.0.1:9092/lutece/rest/notification/send</value>
        </property>
        <property name="apiManagerEndPoint">
            <value>http://127.0.0.1:9092/lutece/rest/api/token</value>
        </property>
    </bean>
    <bean id="identitystore-fccertifier.lib-notifygru.restTransport" class="fr.paris.lutece.plugins.librarynotifygru.rs.service.NotificationTransportRest">
        <property name="notificationEndPoint">
            <value>http://localhost:8080/lutece/rest/notification/send</value>
        </property>
    </bean> 
    <bean id="identitystore-fccertifier.lib-notifygru.notificationService" class="fr.paris.lutece.plugins.librarynotifygru.services.NotificationService">
        <constructor-arg ref="identitystore-fccertifier.lib-notifygru.apiManagerTransport"/>
    </bean> 
    
    <!-- Certifier -->
    <bean id="identitystore-fccertifier.certifier" class="fr.paris.lutece.plugins.identitystore.service.certifier.BaseCertifier" >
        <property name="code" value="fccertifier" />
        <property name="name" value="France Connect Certifier" />
        <property name="description" value="Certificateur d'attributs d'état civil à partir de FranceConnect" />
        <property name="certificateLevel" value="3" />
        <property name="expirationDelay" value="-1" />
        <property name="iconUrl" value="images/admin/skin/plugins/identitystore/modules/fccertifier/franceconnect.png" />
        <property name="certifiableAttributesList">
            <list>
                <value>family_name</value>
                <value>birthplace</value>
                <value>birthdate</value>
                <value>birthcountry</value>
                <value>fc_gender</value>
                <value>fc_family_name</value>
                <value>fc_birthplace</value>
                <value>fc_birthdate</value>
                <value>fc_given_name</value>
                <value>fc_birthcountry</value>
            </list>
        </property>
    </bean>

</beans>
